{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <div class="my-3 mb-6">
		<h1 class="font-bold text-2xl">Commentaires sur le restaurant</h1>
    </div>
    <a class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-2 py-1.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" href="{{ path('app_comments_new') }}">Ecrire un commentaire</a>
    <div>
        {% if comments is empty %}
            <p class="my-5">Aucun commentaires publi√©s.</p>
        {% else %}
            <div>
                {% for comment in comments %}
					<div class="flex flex-col m-6 border rounded bg-[#f9e1e2]">
                        <span class="p-1 m-2">{{ comment.user.nom }}</span>
                        <p class="p-2 m-2 rounded bg-white text-start">{{ comment.content }}</p>
                        <span class="p-1 m-2">{{ comment.createdAt|date('d/m/Y H:i:s') }}</span>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
