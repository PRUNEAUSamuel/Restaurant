{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block javascripts %}
    <script defer src="{{asset('js/modal.js') }}"></script>

    {{ parent() }}
    <script defer>
    document.addEventListener('DOMContentLoaded', function () {
    const arrivalSelect = document.querySelector('.arrival-time-select');
    const storedDate = localStorage.getItem('selectedReservationDate');

    if (!arrivalSelect || !storedDate) return;

    const now = new Date();
    const selectedDate = new Date(storedDate);
    const isToday = selectedDate.toDateString() === now.toDateString();

    const options = arrivalSelect.querySelectorAll('option');

    options.forEach(option => {
        const timeValue = option.value;
        if (!timeValue) return; // ignore placeholder

        const [hour, min] = timeValue.split(':').map(Number);
        const slotDateTime = new Date(selectedDate);
        slotDateTime.setHours(hour, min, 0, 0);

        if (isToday && slotDateTime < now) {
            option.disabled = true;
            option.textContent += ' (indisponible)';
        } else {
            option.disabled = false;
        }
    });

    // Si toutes les options sont désactivées
    const activeOptions = Array.from(options).filter(o => !o.disabled && o.value);
    if (activeOptions.length === 0) {
        arrivalSelect.disabled = true;
    }
});
    </script>
{% endblock %}

{% block body %}

<button data-modal-target="authentication-modal" data-modal-toggle="authentication-modal" id="registerButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerModal" style="display:none;">
    S'inscrire
</button>
<div id="authentication-modal" tabindex="-1" class="bg-black/70 hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 content-center w-full md:inset-0 h-full">
    <div class="relative p-4 w-full max-w-md max-h-full justify-self-center">
        <div class="relative bg-[#DADADA] rounded-lg shadow-sm">
            <div class="flex items-center justify-between p-2 pl-4 md:p-5 rounded-t">
                <h3 class="font-bold">
                    Réservez votre table 2/3
                </h3>
                <button type="button" class="end-2.5 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="authentication-modal">
                    <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span id="closeModal" class="sr-only">Close modal</span>
                </button>
            </div>
            <div class="p-4 md:p-5 py-1">
                {{ form_start(form, {'attr': {'class': 'space-y-3'}}) }}

                    {{ form_label(form.arrivalTime) }}
                    {% if form.arrivalTime.vars.errors|length > 0 %}
                        {% for error in form.arrivalTime.vars.errors %}
                            <span class="text-red-500">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}
                    {{ form_widget(form.arrivalTime)}}

                    <button type="submit" class="mt-1 w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-1.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Suivant</button>
                    <a href="{{ path('app_reservation_clear') }}" class="text-blue-700 hover:underline dark:text-blue-800">Annuler</a>
                    
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

