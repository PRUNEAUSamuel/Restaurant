{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}

<section class="flex flex-col items-center bg-[#f9e1e2] md:flex-row">
    <div class="h-66 md:w-2/5 overflow-hidden flex justify-center items-center">
        <img src="/build/images/page_menu/menu_titre.webp" alt="Carte d'un restaurant" class="object-cover w-full h-full"/>
    </div>
    <div class="size-full m-2 font flex flex-col">
        <h1 class="font-bold mb-2 text-2xl md:text-4xl md:mb-6">Notre carte du moment</h1>
        <div class="bg-white flex m-2 mx-5 p-2 justify-between md:text-3xl">
            <p class="p-1">Entrée + Plat ou Plat + Dessert</p>
            <p class="p-1">51.00€</p>
        </div>
        <div class="bg-white flex m-2 mx-5 p-2 justify-between md:text-3xl">
            <p class="p-1">Entrée + Plat + Dessert</p>
            <p class="p-1">71.00€</p>
        </div>
    </div>
</section>
<section class="flex flex-col items-center md:flex-row">
    <div class="h-66 md:h-95 md:w-2/5 overflow-hidden flex justify-center items-center md:order-2">
        <img src="/build/images/page_menu/menu_entree.webp" alt="Image d'entrée" class="object-cover size-full"/>
    </div>
    <div class="size-full md:p-8">
        {% for entree in entrees %}
            <div class="p-1 px-2 m-2 font md:flex md:justify-between bg-[#f9e1e2] lg:text-lg">
                <p>{{ entree.name }}</p>
                <p>{{ entree.price }}€</p>
            </div>
        {% endfor %}
    </div>
</section>
<section class="flex flex-col items-center md:flex-row bg-[#fcfafa]">
    <div class="h-66 md:h-95 md:w-2/5 overflow-hidden flex justify-center items-center">
        <img src="/build/images/page_menu/menu_plat.webp" alt="Image de viande" class="object-cover size-full"/>
    </div>
    <div class="size-full md:p-8">
        {% for plat in plats %}
            <div class="p-1 px-2 m-2 font md:flex md:justify-between bg-[#f9e1e2] lg:text-lg">
                <p>{{ plat.name }}</p>
                <p>{{ plat.price }}€</p>
            </div>
        {% endfor %}
    </div>
</section>
<section class="flex flex-col items-center md:flex-row">
    <div class="h-66 md:h-95 md:w-2/5 overflow-hidden flex justify-center items-center md:order-2">
        <img src="/build/images/page_menu/menu_dessert.webp" alt="Image de gateau" class="object-cover size-full"/>
    </div>
    <div class="size-full md:p-8">
        {% for dessert in desserts %}
            <div class="p-1 px-2 m-2 font md:flex md:justify-between bg-[#f9e1e2] lg:text-lg">
                <p>{{ dessert.name }}</p>
                <p>{{ dessert.price }}€</p>
            </div>
        {% endfor %}
    </div>
</section>
<section class="flex flex-col items-center md:flex-row bg-[#fcfafa]">
    <div class="h-66 md:h-95 md:w-2/5 overflow-hidden flex justify-center items-center">
        <img src="/build/images/page_menu/menu_boisson.webp" alt="Image de vins" class="object-cover size-full"/>
    </div>
    <div class="size-full md:p-8">
        {% for boisson in boissons %}
            <div class="p-1 px-2 m-2 font md:flex md:justify-between bg-[#f9e1e2] lg:text-lg">
                <p>{{ boisson.name }}</p>
                <p>{{ boisson.price }}€</p>
            </div>
        {% endfor %}
    </div>
</section>

{% endblock %}