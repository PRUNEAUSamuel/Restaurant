<div class="w-4/5 justify-self-center">
    {{ form_start(form, {'attr': {'class': 'space-y-3'}}) }}
        {{ form_label(form.email) }}
        {% if form.email.vars.errors|length > 0 %}
            {% for error in form.email.vars.errors %}
                <span class="text-red-500">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
        {{ form_widget(form.email)}}

        {{ form_label(form.nom) }}
        {% if form.nom.vars.errors|length > 0 %}
            {% for error in form.nom.vars.errors %}
                <span class="text-red-500">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
        {{ form_widget(form.nom)}}
        
        {{ form_label(form.password.first) }}
        {% if form.password.first.vars.errors|length > 0 %}
            {% for error in form.password.first.vars.errors %}
                <span class="text-red-500">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
        {{ form_widget(form.password.first)}}

        {{ form_row(form.password.second) }}
        <button class="mt-1 w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-1.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 mb-3">{{ button_label|default('Enregistrer les modifications') }}</button>
    {{ form_end(form) }}
</div>